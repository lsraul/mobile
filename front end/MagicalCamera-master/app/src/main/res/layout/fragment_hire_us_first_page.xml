<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFirstPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:foregroundGravity="right"
        android:gravity="right">

        <ImageView
            android:id="@+id/ivFourthImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fragment_1_contact_us_4"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivFirstImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_fragment_1_contact_us_1"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/txtFirstFragmentHireUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hire_us_first_fragment"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fragment_1_contact_us_5"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/imgLinkedIn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fragment_1_contact_us_3"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/imgMessenger"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fragment_1_contact_us_2"/>

    </LinearLayout>

</LinearLayout>